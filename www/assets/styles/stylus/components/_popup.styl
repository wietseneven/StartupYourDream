.popup
  width    100vw
  height   100vh
  position absolute
  top      0
  left     0
  display  flex
  a
    color #fff
  .overlay
    position absolute
    width      100vw
    height     100vh
    top        0
    left       0
    background url(../../images/nightlights-background.jpg) center center/cover
    filter     blur(10px)
  .body
    position         relative
    width            350px
    height           350px
    color            #fff
    background-image linear-gradient(-180deg, rgba(255,255,255,0.00) 0%, #174389 100%)
    border-radius    50%
    overflow         hidden
    margin           auto
    text-align       center
    display          flex
    flex-direction   row
    align-items      center
    padding          15px
    .video
      height          380px
      width           380px
      background-size cover
      object-fit      cover
      border-radius   50%
      margin-left     -15px
      //margin-right    -15px
    .inner
      margin 0 auto

  .startups
    width           100%
    .startup
      display         block
      transition      padding 1s, box-shadow 1s, background .5s
      width           50%
      float           left
      box-sizing      border-box
      box-shadow      0
      overflow        visible !important
      h3
        margin 0
      h5
        display    none
        opacity    0
        transition 1s
      header
        .headerBG
          width      100%
          height     0
          transition .2s
          position   absolute
          top        0
          left       0
          z-index    -1
          max-height 300px
          overflow   hidden
          img
            width  100%
            height 0
            margin-bottom -4px
          &:before
            content    ""
            position   absolute
            width      100%
            height     100%
            background-image: linear-gradient(-180deg, rgba(255,255,255,0.50) 0%, rgba(0,0,0,0.50) 100%);

      &.open
        color      brandDark
        z-index    1
        padding    30px
        box-shadow 300px 0 0 brandDark, -300px 0 0 brandDark
        background #fff
        header
          .headerBG
            height auto
            img
              height auto
        .logo
          img
            width 120px
        h3
          font-size   40px
          line-height 1
        h5
          margin-top 0
          opacity    1
          display    block

        .close
          opacity 1

      .logo
        margin 0
        img
          transition 1s
      .close
        opacity       0
        transition    .2s
        position      absolute
        bottom        20px
        left          0
        right         0
        margin        0 auto
        width         100px
        height        100px
        border-radius 100%
        padding       0
        &:before, &:after
          border-radius 100%

  .belowPopup
    width    350px
    position absolute
    left     0
    right    0
    margin   0 auto
    bottom   50px
    &.hidden
      display none