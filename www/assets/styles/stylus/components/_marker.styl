.marker
  position      absolute
  margin        -40px 0 -10px 0
  width         40px
  height        40px
  background    #fff
  border        4px solid #fff
  border-radius 4px
  transition    .6s
  transform     rotate(45deg)
  &.open
    color      brandDark
    z-index    1
    padding    30px
    box-shadow 300px 0 0 brandDark, -300px 0 0 brandDark
    background #fff
    transform  rotate(0deg)
    top        0 !important
    left       15% !important
    width      70%
    height     100vh
    border     none
    margin     0
    .linken
      display  block
      right    15px
      position absolute
      top      60px
      height   60px
    header
      height     300px
      transition height .6s
      .headerBG
        height 300px
        img
          height auto
    .logo
      img
        width     120px
        height    120px
        transform rotate(0)
    h3
      font-size   40px
      line-height 1

    .close
      opacity 1

  .logo
    margin 0
    img
      transition 1s
  .close
    opacity       0
    transition    .2s
    position      absolute
    bottom        75px
    left          0
    right         0
    margin        0 auto
    width         100px
    height        100px
    border-radius 100%
    padding       0
    &:before, &:after
      border-radius 100%
  h3
    margin 0
    font-size 0
    transition .6s
  h4
    display none
  header
    text-align center
    .headerBG
      width      100%
      height     0
      transition .6s
      position   absolute
      top        0
      left       0
      z-index    -1
      max-height 300px
      overflow   hidden
      img
        width         100%
        height        auto
        margin-bottom -4px
        transition    .6s
      &:before
        content    ""
        position   absolute
        width      100%
        height     100%
        background-image linear-gradient(-180deg, rgba(255,255,255,0.50) 0%, rgba(0,0,0,0.50) 100%)

  .logo
    img
      width      40px
      height     40px
      //transition .6s
      transform  translateZ(0) rotate(-45deg)
  .content
    display none
  .linken
    display none