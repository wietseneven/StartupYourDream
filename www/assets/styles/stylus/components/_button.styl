button, .btn
  padding          17px 34px 15px 34px
  position         relative
  text-shadow      1px 2px 0 rgba(58, 45, 125, 0.2)
  border-radius    8px
  color            #fff
  min-height       50px
  border           1px solid #fff
  text-transform   uppercase
  font-family      "FuturaStd-BoldOblique", Helvetica, Arial, Sans-Serif
  background       brandDark
  background-image linear-gradient(-180deg, rgba(255,255,255,0.15) 0%, rgba(128,120,172,0.15) 100%)
  font-size        24px
  z-index          3
  &:after
    content       ""
    width         90%
    height        6%
    background    #fff
    position      absolute
    left          5%
    top           100%
    border-radius 0 0 8px 8px
  &:before
    content       ""
    width         100%
    height        100%
    background    darken(brandDark, 10%)
    position      absolute
    top           0
    left          0
    z-index       -1
    border-radius 8px
    opacity       0
    transition    opacity 240ms ease-out
  &:hover, &:active
    outline none
    &:before
      opacity 1

.twoColBtnGroup
  width  80%
  margin auto
  .btnGroup
    margin-top -70px
  .btn
    display       block
    float         left
    width         47.5%
    box-sizing    border-box
    text-align    center
    margin-bottom 15px
    &:nth-child(2n)
      margin-left 5%
  .popup
    position relative
    width    inherit
    height   inherit
    margin   0 auto