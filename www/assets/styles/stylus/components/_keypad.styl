.keypad
  keySizeWidth  = 133px
  keySizeHeight = 65px
  keymargin     = 1px
  numberofkeys  = 3
  display        flex
  flex-direction column
  font-size      20px
  width          ((numberofkeys)*keySizeWidth)+((numberofkeys*2)*keymargin)
  margin         0 auto
  position       absolute
  left           0
  right          0
  bottom         keySizeHeight
  h4
    text-align center
    color      #fff
  .keyRow
    display         flex
    flex-direction  row
    justify-content center
    .key
      margin     keymargin
      width      keySizeWidth
      height     keySizeHeight
      transition opacity 240ms ease-out
      &.hidden {
        opacity 0
      }
    .key[data-num]
      background brandLight
      position   relative
      transition .1s ease
      &:active
        background darken(brandDark, 10%)
        transform  scale(.9)

      &:before, img
        content    attr(data-num)
        position   absolute
        width      100%
        height     50%
        top        0
        bottom     0
        margin     auto
        text-align center
      img
        content inherit
        height  30%
    .key[data-num="undo"], .key[data-num="cancel"]
      &:before
        content: none

  .result
    background      #fff
    height          keySizeHeight
    width           ((numberofkeys)*keySizeWidth)+((numberofkeys*2)*keymargin)
    display         flex
    flex-direction  row
    justify-content flex-start
    margin-bottom   keymargin
    font-weight     bold
    position        relative
    &.loading
      &:after
        content    ""
        position   absolute
        width      50px
        height     50px
        background url('../../bower_components/open-iconic/svg/loop-circular.svg') center center/contain no-repeat
        left       0
        right      0
        margin     auto
        top        120%
        animation  spin 1s linear infinite reverse
    span
      display    block
      width      keySizeWidth
      margin     keymargin
      text-align center
      align-self center

@keyframes spin {
  from {
    transform rotate(0deg)
  }
  to {
    transform rotate(359deg)
  }
}